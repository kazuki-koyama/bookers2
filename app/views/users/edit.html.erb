<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2>User info</h2>
      <% if @user.errors.any? %>
        <%= @user.errors.count %> errors prohibited this obj from being saved:
        <%= @user.errors.full_messages.each do |message| %>
          <%= message %>
        <% end %>
      <% end %>
      <%= form_with model:@user, local:true do |f| %>
        <div class="form-group">
          <label for="user_name">Name</label>
          <%= f.text_field :name, class:"form-control user_name", id:"user_name" %>
        </div>
        <div class="form-group">
          <label for="user_profile_image">Image</label>
          <%= f.attachment_field :profile_image, class:"form-control-file user_profile_image", id:"user_profile_image" %>
        <div class="form-group mt-3">
          <label for="user_introduction">Introduction</label>
          <%= f.text_area :introduction, class:"form-control user_introduction", id:"user_introduction" %>
        <div class="form-group mt-3">
          <%= f.submit "Update User", class:"btn btn-secondary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>