<div class="container">
  <div class="row">
    <!--左側-->
    <div class="col-md-3">
      <h2>User info</h2>
      <%= attachment_image_tag current_user.profile_image, :profile_image, :fill, 100, 100, format: 'jpg', fallback: "no_image.jpg" %>
      <table class="table">
        <tbody>
          <tr>
            <th>name</th>
            <th><%= current_user.name %></th>
          </tr>
          <tr>
            <th>introduction</th>
            <th><%= current_user.introduction %></th>
          </tr>
        </tbody>
      </table>
      <% if @book.user == current_user %>
        <%= link_to edit_user_path(@book.user) do %>
            <i class="fas fa-user-cog btn btn-outline-secondary btn-block"></i>
        <% end %>
      <% else %>
        <i class="fas fa-user-cog btn btn-outline-secondary btn-block"></i>
      <% end %>

      <h2 class="mt-3">New Book</h2>
      <%= form_with model:@book, local:true do |f| %>
        <div class="form-group">
          <label for="book_title">Title</label>
          <%= f.text_field :title, class:"form-control book_title", id:"book_title" %>
        </div>
        <div class="form-group">
          <label for="book_body">Opinion</label>
          <%= f.text_area :body, class:"form-control book_body", id:"book_body" %></br>
        </div>
        <div class="form-group">
          <%= f.submit "Create Book", class: "btn btn-success" %>
        </div>
      <% end %>
    </div>

    <!--右側-->
    <div class="col-md-8">
      <h2>Books</h2>
      <table class="table table-hover">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @books.each do |book| %>
            <tr>
              <td>
                <%= link_to user_path(book.user.id) do %>
                <%= attachment_image_tag book.user.profile_image, :profile_image, :fill, 40, 40, format:'jpg', fallback:"no_image.jpg", size:"40x40" %>
                <% end %>
              </td>
              <td><%= link_to book.title, book_path(book.user.id) %></td>
              <td><%= book.body %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>