<h2>User info</h2>
<%= attachment_image_tag @book.user.profile_image, :profile_image, :fill, 100, 100, format: 'jpg', fallback: "no_image.jpg" %>
<table>
  <tbody>
    <tr>
      <td>name</td>
      <td><%= @book.user.name %></td>
    </tr>
    <tr>
      <td>introduction</td>
      <td><%= @book.user.introduction %></td>
    </tr>
  </tbody>
</table>
<%= link_to edit_user_path(@book.user) do %>
    <i class="fas fa-user-cog"></i>
<% end %>

<h2>New Book</h2>
<%= form_with model:@book, local:true do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Opinion</h4>
  <%= f.text_area :body %></br>
  <%= f.submit "Create Book" %>
<% end %>